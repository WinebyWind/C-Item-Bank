# include <stdio.h>
 int fac(int x)
{
  int m,n=1;
  for(m=1;m<=x;m++)
  n=n*m;
  return (n);
 }
 int main()
  {
    int i,g,s,b;
    for(i=100;i<1000;i++){
      b=i/100;
      s=(i-b*100)/10;
      g=i%10;
      if(fac(g)+fac(s)+fac(b)==i)
          printf("%d!+%d!+%d!=%d\n",b,s,g,i);
   }
   return 0;
}
